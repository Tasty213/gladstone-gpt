    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
            "args": [],
            "justMyCode": false
        },
        {
            "name": "Python: Web app",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/backend/app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/app/backend/",
            "args": [
                "--reload"
            ],
            "justMyCode": false
        },
        {
            "name": "Python: Run ingester",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ingester/ingester/ingest.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/ingester/ingester",
            "justMyCode": true
        },
        {
            "name": "Python: Run local query",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/query.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/app",
            "justMyCode": true
        },
        {
            "name": "Python: Launch Scrapy Spider",
            "type": "python",
            "request": "launch",
            "module": "scrapy",
            "args": [
                "runspider",
                "${file}"
            ],
            "console": "integratedTerminal",
            "cwd": "${fileDirname}"
        }
    ]
}